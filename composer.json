{
    "name": "icecave/druid",
    "description": "An RFC-4122 compliant library for generating and parsing universally unique identifiers (UUIDs).",
    "keywords": ["uuid", "guid", "global", "universal", "universally", "unique", "identifer", "id", "random", "rfc4122", "rfc-4122", "4122"],
    "homepage": "https://github.com/IcecaveStudios/druid",
    "license": "MIT",
    "authors": [
        {
            "name": "James Harris",
            "email": "james.harris@icecave.com.au",
            "homepage": "https://github.com/jmalloc"
        }
    ],
    "require": {
        "php": ">=5.3",
        "icecave/isolator": "~2"
    },
    "require-dev": {
        "eloquent/typhoon": "~0.9.0",
        "icecave/archer": "~1"
    },
    "suggest": {
        "eloquent/asplode": "Drop-in exception-based error handling."
    },
    "autoload": {
        "psr-0": {
            "Icecave\\Druid": "src",
            "Icecave\\Druid\\TypeCheck": "src-typhoon"
        }
    },
    "extra": {
        "typhoon": {
            "output-path": "src-typhoon",
            "validator-namespace": "Icecave\\Druid\\TypeCheck",
            "use-native-callable": false
        }
    }
}
